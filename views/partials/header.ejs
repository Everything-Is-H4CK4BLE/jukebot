<div class="ui top attached menu">
  <div class="left menu">
    <div class="item">
      <img src="/images/jukebot.png" />
    </div>
    <div class="item">
      <div class="ui left icon input">
        <input type="text" placeholder="Username..." ng-model="username" enter-press="addVideo()">
        <i class="user icon"></i>
      </div>
    </div>
  </div>
  <div class="ui search item no-border" style="max-width: 450px; flex-grow: 1;">
    <div class="ui transparent icon input" style="background-color: #f5f5f5; padding: 8px;">
      <input class="prompt" type="text" placeholder="Search YouTube..." style="border-radius: 0;">
      <i class="search link icon" style="right: 8px;"></i>
    </div>
    <div class="results"></div>
  </div>
  <div class="right menu" style="opacity: .75;">
    <a class="item" onclick="$('.favorites').sidebar('toggle');" title="Favorites">
      <i class="red heart icon"></i>
    </a>
    <a class="ui item">
      JukeBot v<%= sails.config.globals.version %>
    </a>
  </div>
</div>
