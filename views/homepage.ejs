<%- partial('./partials/header.ejs') %>

<%- partial('./partials/favorites.ejs') %>

<div id="main-content">

  <div class="ui stackable grid" style="width: 100%;">
    <div class="seven wide column">
      <div ng-if="canShowChromeFlag()">
        <div class="ui divider"></div>
        <div class="ui warning ignored message">
          To let JukeBot auto play the next video on Chrome, go to <a href="chrome://flags/#disable-gesture-requirement-for-media-playback">chrome://flags/#disable-gesture-requirement-for-media-playback</a> and disable the flag.
          <i class="close icon" ng-click="hideChromeFlag()"></i>
        </div>
      </div>

      <%- partial('./partials/currently-playing.ejs') %>

    </div>
    <div class="five wide column">
      <playlist username="username"></playlist>
    </div>
    <div class="four wide column">
      <chat username="username"></chat>
    </div>

  </div>
</div>
